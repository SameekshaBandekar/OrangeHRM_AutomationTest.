<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite parallel="tests" name="Suite">
	<listeners>
    <listener class-name="TestComponents.Listeners"/>
    <!-- You can add more listeners if needed -->
  </listeners>
  <test name="PositiveTests">
    <groups>
      <run>
        <include name="positive"/>
      </run>
    </groups>
    <classes>
      <class name="orangeHRMTests.EmployeeEditTest"/>
      <class name="orangeHRMTests.TimeSheetSubmissionTest"/>
    </classes>
  </test> <!-- Test -->
   <!-- Negative Tests -->
  <test name="NegativeTests">
    <groups>
      <run>
        <include name="negative"/>
      </run>
    </groups>
    <classes>
		<class name="orangeHRMTests.InvalidEmployeeSearchTest"/>
		<class name="orangeHRMTests.ApplyLeaveForNoLeaveBalance"/>
		 <class name="orangeHRMTests.InvalidCredentialsTest"/>
		 </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->
